// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NotificationPreference {
  id String @id

  emailPurchases Boolean

  emailRecurringPayments Boolean

  emailFreeDownloads Boolean

  emailPersonalizedProductAnnoucements Boolean

  emailComments Boolean

  mobilePurchases Boolean

  mobileRecurringPayments Boolean

  mobileFreeDownloads Boolean

  createdAt DateTime @default(now())

  updatedAt DateTime?

  // * Relations
  seller   Seller @relation(fields: [sellerId], references: [id])
  sellerId String @unique
}

model Seller {
  id String @id

  defaultSupportEmail String?

  defaultTwitterUrl String?

  defaultCurrency String?

  defaultInstagramUrl String?

  createdAt DateTime @default(now())

  updatedAt DateTime?

  deletedAt DateTime?

  // * Relations
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  notificationPreference NotificationPreference?
}

model RefreshToken {
  id String @id

  accessToken String @unique

  refreshToken String @unique

  userId String @unique

  expiresIn Int

  isActive Boolean

  createdAt DateTime @default(now())

  updatedAt DateTime?

  user User @relation(fields: [userId], references: [id])
}

model Role {
  id Int @id

  name String

  userRoles UserRole[]
}

model User {
  id String @id

  name String?

  phone String? @unique

  bio String?

  email String @unique

  googleId String? @unique

  facebookId String?

  avatar String?

  password String?

  createdAt DateTime @default(now())

  updatedAt DateTime?

  deletedAt DateTime?

  seller Seller?

  userRoles UserRole[]

  refreshTokens RefreshToken[]
}

model UserRole {
  id String @id

  roleId Int

  userId String

  role Role @relation(fields: [roleId], references: [id])

  user User @relation(fields: [userId], references: [id])
}

model Font {
  id   String @id
  name String @unique
}
